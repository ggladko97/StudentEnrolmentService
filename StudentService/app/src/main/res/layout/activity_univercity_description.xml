<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.wsiiz.studentservice.UnivercityDescriptionActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#e0a0a0"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/DtvUnivercityName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="WSIIZ Rzeszow"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#070606"
            android:textSize="28dp"
            android:layout_marginLeft="40dp" />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/btnAddOpinion"
            android:background="#e0a0a0"
            android:layout_gravity="center_vertical"
            android:foregroundGravity="center_vertical"
            android:src="@android:drawable/ic_input_add" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#d0dbe3"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/DtvUnivercityCity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="Rzeszow"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#070606"
            android:textSize="24dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recent opinions"
            android:textStyle="bold"
            android:textSize="22dp"
            android:layout_marginBottom="25dp"/>
    </LinearLayout>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/lvOpinionsCustom"></ListView>
</LinearLayout>
