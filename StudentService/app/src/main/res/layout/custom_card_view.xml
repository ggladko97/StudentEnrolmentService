<?xml version="1.0" encoding="utf-8"?>
<com.wsiiz.studentservice.adapters.CardViewAnimator xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/flUniverTitle">
        </FrameLayout>
        <ImageButton
            android:layout_width="84dp"
            android:layout_height="wrap_content"
            android:id="@+id/ibExpand"
            android:src="@android:drawable/arrow_down_float"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.10" />
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:id="@+id/flUniverExpanded"></FrameLayout>

    </LinearLayout>

</com.wsiiz.studentservice.adapters.CardViewAnimator>