<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="1"
    android:background="#f0e6b6">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="#e0a0a0">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="WSIIZ Rzeszow"
        android:id="@+id/tvUnivercityName"
        android:textColor="#070606"
        android:textSize="28dp"
        android:layout_margin="20dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="#070606"
        android:text="Opinions "
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#d71313"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:textSize="30dp"
        android:text="5"
        android:id="@+id/tvOpinionsCount" />
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:background="#d0dbe3">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Rzeszow"
            android:id="@+id/tvUnivercityCity"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textColor="#070606"
            android:textSize="19dp"
            android:layout_marginTop="20dp" />
    </LinearLayout>
    <ImageButton
        android:layout_width="84dp"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton"
        android:src="@android:drawable/arrow_down_float"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.10" />

</LinearLayout>